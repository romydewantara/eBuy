<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_product_adm"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ajax"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/tv_product_adm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kaos Casual"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. "/>

                <TextView
                    android:id="@+id/tv_price_adm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="120000"/>

            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/tv_delivered"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="delivered"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:id="@+id/tb_confirm">
                        <ImageView
                            android:id="@+id/img_confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/accept_green"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Konfirmasi Pembayaran"
                            android:layout_marginLeft="10dp"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/tb_reject">

                        <ImageView
                            android:id="@+id/img_reject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/error_red"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tolak Pembayaran"
                            android:layout_marginLeft="10dp"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/tb_kirim">

                        <ImageView
                            android:id="@+id/img_send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/send_grey"
                            android:layout_marginBottom="0dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Kirim Pesanan"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:layout_marginLeft="10dp"/>

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>